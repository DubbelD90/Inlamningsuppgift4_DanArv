<Page
    x:Class="UWPApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="LightSkyBlue">
            <StackPanel VerticalAlignment="Center">
                <Button x:Name="btnSendMsg" Click="btnMessages_Click" Background="DeepSkyBlue" Foreground="White" BorderThickness="0" FontFamily="Century Gothic" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock FontFamily="Segoe MDL2 ASSETS" Text="&#xE715;" FontSize="40" />
                        <TextBlock Text="Send Message" FontSize="30" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Background="DeepSkyBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ListView x:Name="lvRecieve" Grid.Row="0" Background="AliceBlue" FontFamily="Century Gothic" FontSize="20" Margin="40,60,40,0" Padding="5">
                <StackPanel>
                    <TextBlock Foreground="DeepSkyBlue" FontSize="40" Text="The list dosnt work"/>
                    <TextBlock Foreground="DeepSkyBlue" FontSize="40" Text="However the button sends a message!"/>
                </StackPanel>
            </ListView>

            <Button Grid.Row="1" x:Name="btnRemove" Click="btnRemove_Click" Width="400" HorizontalAlignment="Center" Background="LightSkyBlue">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock FontFamily="Segoe MDL2 ASSETS" Text="&#xE74D;" FontSize="50" />
                    <TextBlock Text="Remove data" FontSize="40" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

    </Grid>
</Page>
